<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.template.ui.MainController"
            style="-fx-background-color: #F1F5F9;">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" style="-fx-background-color:#0EA5E9;-fx-padding:20;">
            <Label text="Student Management System"
                   style="-fx-font-size:26px;-fx-text-fill:white;-fx-font-weight:bold;"/>

            <HBox spacing="10">
                <Button fx:id="addStudentButton" onAction="#handleAddStudent" text="Add"
                        style="-fx-background-color:#2563EB;-fx-text-fill:white;"/>
                <Button fx:id="editStudentButton" onAction="#handleEditStudent" text="Edit"
                        style="-fx-background-color:#16A34A;-fx-text-fill:white;"/>
                <Button fx:id="deleteStudentButton" onAction="#handleDeleteStudent" text="Delete"
                        style="-fx-background-color:#DC2626;-fx-text-fill:white;"/>
                <Button fx:id="clearButton" onAction="#handleClearForm" text="Clear"
                        style="-fx-background-color:#64748B;-fx-text-fill:white;"/>
                <Button fx:id="reportsButton" onAction="#openReportsWindow" text="Reports"
                        style="-fx-background-color:#7C3AED;-fx-text-fill:white;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <ComboBox fx:id="programmeFilter"
                          onAction="#handleProgrammeFilter"
                          prefWidth="160"
                          promptText="Filter by Program"/>

                <Button onAction="#handleSortByGpa"
                        text="Sort by GPA"
                        style="-fx-background-color:#334155;-fx-text-fill:white;"/>

                <Button onAction="#handleSortByName"
                        text="Sort by Name"
                        style="-fx-background-color:#334155;-fx-text-fill:white;"/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="20" style="-fx-padding:20;">

            <!-- TABLE FIRST -->
            <TableView fx:id="studentTable"
                       VBox.vgrow="ALWAYS"
                       style="-fx-background-color:white;">
                <columns>
                    <TableColumn fx:id="idColumn" text="Student ID"/>
                    <TableColumn fx:id="nameColumn" text="Full Name"/>
                    <TableColumn fx:id="programmeColumn" text="Programme"/>
                    <TableColumn fx:id="levelColumn" text="Level"/>
                    <TableColumn fx:id="gpaColumn" text="GPA"/>
                    <TableColumn fx:id="emailColumn" text="Email"/>
                    <TableColumn fx:id="phoneColumn" text="Phone"/>
                    <TableColumn prefWidth="75.0" text="Status"/>
                </columns>
            </TableView>

            <!-- FORM BELOW -->
            <GridPane hgap="15" vgap="15"
                      style="-fx-background-color:white;-fx-padding:20;-fx-background-radius:10;">

                <Label text="Student ID:"/>
                <TextField fx:id="studentIdField" GridPane.columnIndex="1"/>

                <Label text="Full Name:" GridPane.columnIndex="2"/>
                <TextField fx:id="fullNameField" GridPane.columnIndex="3"/>

                <Label text="Programme:" GridPane.rowIndex="1"/>
                <TextField fx:id="programmeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Level:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="levelField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="GPA:" GridPane.rowIndex="2"/>
                <TextField fx:id="gpaField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="emailField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Label text="Phone:" GridPane.rowIndex="3"/>
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Status" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <ComboBox prefWidth="150.0"
                          GridPane.columnIndex="3"
                          GridPane.rowIndex="3"/>
            </GridPane>

        </VBox>
    </center>
</BorderPane>